<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".ui.activitys.TravelActivity">

    <LinearLayout
        android:id="@+id/llButons"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/llTravel"
        tools:layout_editor_absoluteX="16dp">

        <Button
            android:id="@+id/btnRefreshTravel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="actualizar" />

        <Button
            android:id="@+id/btnFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="firmar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTravel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/llChofer"
        tools:layout_editor_absoluteX="117dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/EditText"
                android:text="FECHA"
            />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/EditText"
                android:text="PASAJERO"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/EditText"
                android:text="ORIGEN" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/EditText"
                android:text="DESTINO" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/EditText"
                android:text="CONSIDERACIONES" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/EditText"
                android:text="PEAJE" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/EditText"
                android:text="COSTO ESTACIONAMIENTO" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/EditText"
                android:text="COSTO ESPERA" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/EditText"
                android:text="COSTO VUELTA" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/EditText"
                android:visibility="invisible"
                android:text="COSTO TOTAL" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/travelData"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                style="@style/EditText"
                android:enabled="false"/>

            <EditText
                android:id="@+id/tvPassenger"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/EditText"
                android:text=""
                android:enabled="false"/>

            <EditText
                android:id="@+id/tvOrigin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                style="@style/EditText"
                android:enabled="false"
                />

            <EditText
                android:id="@+id/tvDestiny"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                style="@style/EditText"
                android:enabled="false"/>

            <EditText
                android:id="@+id/tvObeservation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                style="@style/EditText"
                android:enabled="false"
                />


            <EditText
                android:id="@+id/editTextToll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:digits="0123456789."
                android:inputType="numberDecimal"
                style="@style/EditText"
                android:text=""/>

            <EditText
                android:id="@+id/editTextParking"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:digits="0123456789."
                android:inputType="numberDecimal"
                style="@style/EditText"
                android:text=""/>

            <EditText
                android:id="@+id/editTextWaitingTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:digits="0123456789."
                android:inputType="numberDecimal"
                style="@style/EditText"
                android:text=""/>

            <EditText
                android:id="@+id/editTextTaxForReturn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:digits="0123456789."
                android:inputType="numberDecimal"
                style="@style/EditText"
                android:text=""/>

            <EditText
                android:id="@+id/tvTotalCost"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                style="@style/EditText"
                android:visibility="invisible"
                android:enabled="false"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llChofer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/tvChoferNombre"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>